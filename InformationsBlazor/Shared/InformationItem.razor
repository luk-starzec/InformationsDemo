
<tr class="information-item__row @rowCssClass">

    <td class="information-item__title-item">
        <a href=@Information.Url target="_blank" rel="noopener">@title</a>
    </td>
    <td class="information-item__date-item">
        @Information.Date.ToShortDateString()
    </td>
    <td class="information-item__seasons-item">
        @seasons
    </td>

</tr>


@code {
    [Parameter]
    public Information Information { get; set; }
    [Parameter]
    public CategoryType CategoryType { get; set; }

    private MarkupString title => (MarkupString)Information?.Title;
    private MarkupString seasons => (MarkupString)Information?.Seasons;

    private string rowCssClass => $"information-item__row--{CategoryType.ToString().ToLower()}";
}
